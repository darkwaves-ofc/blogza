datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  markdown  String   // New field for storing Markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

